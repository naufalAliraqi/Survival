<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:alpha="0.8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="32dp">

        <TextView
            android:id="@+id/textRang"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="78"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/rang"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/textTeamName"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="18dp"
            android:gravity="center_vertical"
            android:text="People's Republic of China"
            android:textSize="16sp"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/teamName"
            app:layout_constraintStart_toEndOf="@+id/textRang"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/textGold"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="78"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/gold"
            app:layout_constraintEnd_toStartOf="@+id/textSilver"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/textSilver"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="78"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/silver"
            app:layout_constraintEnd_toStartOf="@+id/textBronze"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/textBronze"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:layout_marginEnd="18dp"
            android:gravity="center"
            android:text="78"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/bronze"
            app:layout_constraintEnd_toStartOf="@+id/textR_By_Total"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/textR_By_Total"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="78"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/rangTotal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>